    <%- include('../partials/footer') %>
    <%- include('../partials/scripts.ejs') %> 
    <script>
        fetch('/gastronomia/listar', {
            method: 'GET',
            headers: {
                'Authorization': 'Bearer '+ token,
            }
        }).then(res=>res.json())
        .then(res => {
            if(res.status == 401) return console.log(res)
            let data = res[0];
            document.getElementById('nombre-pdto').innerHTML = data.Nombre
            document.getElementById('desc-pdto').innerHTML = data.Descripcion;
            document.getElementById('precio-pdto').innerHTML = '$ '+data.precio;
            console.log(res)
        })
    </script>
